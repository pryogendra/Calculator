<Button>
    font_size:16
<Root>
    BoxLayout:
        size:root.width,root.height
        orientation:"vertical"
        TextInput:
            id:input
            text:"0"
            font_size:35
            size_hint:(1,0.15)
            multiline:False
            halign:"right"
        GridLayout:
            cols:4
            rows:5
            Button:
                text:"%"
                on_press:root.click('%')
            Button:
                text:"^2"
                on_press:root.click('**2')
            Button:
                text:"DEL"
                on_press:root.back()
            Button:
                text:"AC"
                background_color:1,0,0
                on_press:root.clear()
            Button:
                text:"7"
                background_color:(197/155,197/255,1)
                on_press:root.click('7')
            Button:
                text:"8"
                background_color:(197/155,197/255,1)
                on_press:root.click('8')
            Button:
                text:"9"
                background_color:(197/155,197/255,1)
                on_press:root.click('9')
            Button:
                text:"x"
                on_press:root.click('*')
            Button:
                text:"4"
                background_color:(197/155,197/255,1)
                on_press:root.click('4')
            Button:
                text:"5"
                background_color:(197/155,197/255,1)
                on_press:root.click('5')
            Button:
                text:"6"
                background_color:(197/155,197/255,1)
                on_press:root.click('6')
            Button:
                text:"+"
                on_press:root.click('+')
            Button:
                text:"1"
                background_color:(197/155,197/255,1)
                on_press:root.click('1')
            Button:
                text:"2"
                background_color:(197/155,197/255,1)
                on_press:root.click('2')
            Button:
                text:"3"
                background_color:(197/155,197/255,1)
                on_press:root.click('3')
            Button:
                text:"-"
                on_press:root.click('-')
            Button:
                text:"/"
                on_press:root.click('/')
            Button:
                text:"0"
                on_press:root.click('0')
            Button:
                on_press:root.click('.')
                text:"."
            Button:
                id:equal
                text:"="
                on_press:root.evaluate()
